{
  "name": "cypress.testes",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cy:open:chrome": "npx cypress open --browser chrome",
    "cy:run:chrome": "npx cypress run --browser chrome",
    "start": "node src/server.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "test:ci": "cross-env NODE_ENV=test jest --runInBand --reporters=default --reporters=jest-junit",
    "test:update": "cross-env NODE_ENV=test jest --updateSnapshot --runInBand"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@cypress/react": "^9.0.1",
    "@cypress/vite-dev-server": "^7.0.0",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "cypress": "^15.3.0",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "msw": "^2.11.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4"
  },
  "dependencies": {
    "cypress-mochawesome-reporter": "^4.0.2",
    "cypress-multi-reporters": "^2.0.5",
    "events": "^3.3.0",
    "express": "^5.1.0",
    "mocha-junit-reporter": "^2.2.1",
    "path-browserify": "^1.0.1",
    "util": "^0.12.5"
  },
  "jest": {
    "reporters": [
      "default",
      [
        "jest-html-reporter",
        {
          "pageTitle": "Relat√≥rio de Testes",
          "outputPath": "./test/reports/html/test-report.html"
        }
      ]
    ]
  },
  "junit": {
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./reports/junit/",
          "outputName": "junit.xml"
        }
      ]
    ]
  }
}
